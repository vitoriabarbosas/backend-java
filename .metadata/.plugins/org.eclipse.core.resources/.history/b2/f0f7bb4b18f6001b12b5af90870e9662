
public class Loja {
	public static void main(String[] args) {
		Carro c1;
		c1 = new Carro();
		c1.ano = 2021;
		c1.cor = "Preto";
		c1.marca = "Renault";
		c1.modelo = "Sandero";
		c1.preco = 60000;
		
		//exibindo o anuncio
		System.out.println("Automóvel: "+c1.marca+ " - " +c1.modelo);
		System.out.println("  Ano: "+c1.ano);
		System.out.println("  Cor: " +c1.cor);
		System.out.println("  Preço: " +c1.preco);
	
		
}
}
